


<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center p-4 "><%= cl_image_tag @car.photo.key, height: 250, width: 400, class: "shadow mb-5 bg-body rounded" ,crop: :fill %> </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center"> <i class=></i> <span class="">
                                    <%= link_to cars_path, class: 'btn' do %>
                                     <i class="fa fa-long-arrow-left"></i>
                                    Back
                                    <% end %>
                              </span> </div>
                            </div>
                            <div class="mt-4 mb-3"> <span class="text-uppercase text-muted brand"><%= @car.year %></span>
                                <h5 class="text-uppercase"><%= @car.make.capitalize %> - <%= @car.model.capitalize %></h5>
                                <div class="price d-flex flex-row align-items-center"> <span class="act-price"><%= @car.price_per_day %>â‚¬<i class="text-muted"> per day</i></span>
                                </div>
                            </div>
                              <p class="about">
                                           <i class="fa-solid fa-car"></i> <%= @car.transmission %>
                                               /
                                             <i class="fa-solid fa-chair"></i> Seats: <%= @car.seats %>
                                             /
                                             <i class="">
                               Air Conditioning:
                                <% if @car.air_conditioning %>
                               <i class="fa-solid text-muted fa-circle-check"></i>
                                <% else %>
                                  <i class="fa-solid text-muted fa-circle-xmark"></i>
                                  <% end %>
                              </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
