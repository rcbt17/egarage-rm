    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active hover-underline-animation">
            <%= link_to "Home", root_path, class: "nav-link mx-3" %>
          </li>
          <li class="nav-item hover-underline-animation">
            <%= link_to 'Rent a Car', cars_path, class: "nav-link mx-3" %>
          </li>
          <li class="nav-item hover-underline-animation">
            <%= link_to "My Bookings", bookings_path, class: "nav-link mx-3" %>
          </li>
          <li class="nav-item hover-underline-animation">
            <%= link_to "Manage Fleet", manage_cars_path, class: "nav-link mx-3" %>
